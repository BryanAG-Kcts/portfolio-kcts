---
import { getCollection } from 'astro:content'
import BaseLayout from '@/layout/baseLayout.astro'
import HeroView from '@/views/index/heroView.astro'

const [hero] = await getCollection('hero', file => {
  return file.slug === 'en'
})
---

<BaseLayout
  title="Home"
  lang="en"
  description="Home page"
  keywords={['home', 'portfolio', 'kcts']}
>
  <HeroView titles={hero.data.wordList} subtitle={hero.body} />
</BaseLayout>
