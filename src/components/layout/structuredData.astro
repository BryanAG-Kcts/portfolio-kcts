---
import Favicon from '@/assets/favicon-dark.svg'
import type { Languages } from '@/interfaces/i18n'

interface Props {
  title: string
  lang: Languages
  description: string
}

const { title, lang, description } = Astro.props
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: title,
  url: Astro.url.href,
  description,
  inLanguage: lang,
  author: {
    '@type': 'Person',
    name: 'BryanAG-kcts',
    email: 'bryanalvarezg.kcts@gmail.com',
    url: Astro.url.href,
    image: Favicon.src
  }
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
