---
import { Badge } from '@/components/ui/badge'

interface Props {
  title: string
  sub: string
}

const { title, sub } = Astro.props
---

<div class="flex flex-col gap-16 my-10">
  <div class="flex flex-col gap-2 items-center text-center">
    <Badge variant="secondary" className="text-md">{sub}</Badge>
    <h2 class="font-bold font-[Poppins] text-4xl md:text-5xl">{title}</h2>
  </div>

  <slot />
</div>
