---
import { HeroBackground } from '@/components/hero/heroBackground'
import { HeroTitles } from '@/components/hero/heroTitles'

interface Props {
  titles: string[]
  subtitle: string
}

const { titles, subtitle } = Astro.props
---

<section
  class="p-2 w-full h-screen flex flex-col justify-center items-center text-center gap-1 relative z-10"
>
  <HeroTitles client:idle titles={titles} />
  <p class="text-lg">{subtitle}</p>

  <HeroBackground client:idle />
</section>

<style>
  section {
    background-color: var(--background);
    font-family: 'Poppins', sans-serif;
  }

  section p {
    font-family: 'Quicksand', sans-serif;
  }
</style>
